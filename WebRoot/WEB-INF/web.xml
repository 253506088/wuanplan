<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>
  
  <!-- 默认页面为登录页 -->	
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>www.wuanplan.com.servlet.Register</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>www.wuanplan.com.servlet.Login</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>www.wuanplan.com.servlet.Logout</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
  	<servlet-name>modifyPassword</servlet-name>
  	<servlet-class>www.wuanplan.com.servlet.ModifyPassword</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>modifyPassword</servlet-name>
  	<url-pattern>/modifyPassword</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>userList</servlet-name>
  	<servlet-class>www.wuanplan.com.servlet.UserList</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>userList</servlet-name>
  	<url-pattern>/userList</url-pattern>
  </servlet-mapping>
</web-app>
